<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.singlescreenapp.MainActivity">

    <ImageView
        android:src="@drawable/sky_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>


    <ImageView
        android:id="@+id/man"
        android:src="@drawable/u_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        />

    <Button
        android:id="@+id/udacity"
        android:background="@drawable/udacity_cloud"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:onClick="contact_menu"
        />
    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingStart="240dp"
        android:paddingLeft="240dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:visibility="invisible"
        >

        <Button
            android:background="@drawable/mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="mail"/>

        <Button
            android:background="@drawable/facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:onClick="facebook"/>

        <Button
            android:background="@drawable/call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="call"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/t0"
            android:text="@string/udacity"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/t1"
            android:text="@string/street"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/t2"
            android:text="@string/area"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/t3"
            android:text="@string/cod"
            android:textSize="18sp"
            android:layout_marginBottom="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

</RelativeLayout>
